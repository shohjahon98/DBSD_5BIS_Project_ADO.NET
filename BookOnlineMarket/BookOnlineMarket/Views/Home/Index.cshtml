@model  BookOnlineMarket.Models.viewModel.BookViewModel
@using BookOnlineMarket.Helpers

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        <th>
            ID
        </th>
        <th>
            Book Name
        </th>
        <th>
            Author
        </th>
        <th>
            Publisher
        </th>
        <th>
            Price
        </th>
        <th>
            Add Date
        </th>
        <th>
            Genre
        </th>
        <th>
            Quentity
        </th>
        <th>
            Title
        </th>
        <th>
            Book Imgage
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GetBooks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quentity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.Raw("<img style='width:40px; height:50px;' src=\"data:image/jpeg;base64,"
                                   + Convert.ToBase64String(item.BookImg) + "\" />")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }


</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.pageInfo, x => Url.Action("Index", new { page = x }))
</div>

    @using (Html.BeginForm("ImportFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-group">Import File</div>

        <input type="file" name="importFile" />
 
    <input type="submit" value="Save" class="btn btn-default" />
}

